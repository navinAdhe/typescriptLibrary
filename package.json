{
    "name": "typescript-library",
    "version": "1.0.0",
    "description": "This is a demo typescript library",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/navinAdhe/typescriptLibrary.git"
    },
    "keywords": [
        "My first TS Lib",
        "Hello there"
    ],
    "author": "Navinkumar Adhe",
    "license": "ISC",
    "files": [
        "dist/**/*"
    ],
    "devDependencies": {
        "prettier": "^2.0.5",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.2"
    }
}
